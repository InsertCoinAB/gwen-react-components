{
	"name": "@insertcoinab/gwen-react-components",
	"version": "0.0.9",
	"repository": "https://github.com/InsertCoinAB/gwen-react-components",
	"license": "MIT",
	"private": false,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"files": [
		"package.json",
		"LICENSE",
		"dist",
		"README.md"
	],
	"scripts": {
		"docz:dev": "docz dev",
		"docz:build": "docz build && cp ./favicon.ico .docz/dist",
		"dev": "yarn build:ts && yarn build:types",
		"build": "rm -rf dist && yarn build:ts && yarn build:types",
		"build:ts": "NODE_ENV=production babel src --extensions '.ts,.tsx' --out-dir dist --copy-files --ignore spec.ts",
		"build:types": "tsc --emitDeclarationOnly --skipLibCheck",
		"test:types": "tsc --noEmit",
		"test:lint": "eslint 'src/**/*.{ts,tsx}'",
		"test:prettier": "prettier --check 'src/**/*'"
	},
	"dependencies": {
		"react": "^16.11.0",
		"react-dom": "^16.11.0",
		"react-virtualized": "^9.21.1",
		"styled-components": "^4.4.0"
	},
	"peerDependencies": {},
	"devDependencies": {
		"@babel/core": "^7.6.4",
		"@babel/plugin-proposal-decorators": "^7.6.0",
		"@types/jest": "24.0.21",
		"@types/node": "12.12.5",
		"@types/react": "16.9.11",
		"@types/react-dom": "16.9.3",
		"@types/react-virtualized": "^9.21.5",
		"@types/styled-components": "^4.1.19",
		"@typescript-eslint/eslint-plugin": "^2.5.0",
		"@typescript-eslint/parser": "^2.5.0",
		"babel-loader": "^8.0.6",
		"babel-plugin-styled-components": "^1.10.6",
		"docz": "^2.0.0-rc.64",
		"eslint-config-airbnb-typescript": "^6.0.0",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-jest": "^23.0.2",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-unicorn": "^12.1.0",
		"jest": "^24.9.0",
		"prettier": "^1.18.2",
		"react-docgen-typescript-loader": "^3.3.0",
		"react-scripts": "3.2.0",
		"trim-right": "^1.0.1",
		"typescript": "3.6.4"
	}
}
